---
import { getCollection } from 'astro:content';
import '../styles/global.css';

const {
  title = "Costa Lambrinoudis's Personal Portfolio",
  description = 'ML + Backend | Projects, Blog, Resume',
} = Astro.props;

// Get featured projects and sort by date
const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter((project) => project.data.is_featured)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/icons/favicon.svg" />
  </head>
  <body>
    <header class="site-header">
      <a class="brand" href="/">Costa Lambrinoudis</a>
      <nav class="nav">
        <details class="menu">
          <summary>Projects</summary>
          <ul class="menu-list">
            {
              featuredProjects.map((project) => (
                <li>
                  <a href={`/projects/${project.slug}`}>{project.data.title}</a>
                </li>
              ))
            }
            <li><a href="/projects">All projects</a></li>
          </ul>
        </details>
      </nav>
      <nav class="social">
        <a
          href="https://github.com/clambro"
          target="_blank"
          rel="noopener"
          aria-label="GitHub"
          class="social-link"
        >
          <svg viewBox="0 0 24 24">
            <use href="/icons/github.svg#github"></use>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/in/costa-lambrinoudis"
          target="_blank"
          rel="noopener"
          aria-label="LinkedIn"
          class="social-link"
        >
          <svg viewBox="0 0 24 24">
            <use href="/icons/linkedin.svg#linkedin"></use>
          </svg>
        </a>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <small>Â© {new Date().getFullYear()} Costa Lambrinoudis</small>
    </footer>
  </body>
</html>
