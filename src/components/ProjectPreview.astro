---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}
const { project } = Astro.props;

const displayDate = project.data.date
  ? project.data.date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      timeZone: 'UTC',
    })
  : null;
---

<a href={`/projects/${project.slug}`} class="project-card">
  {
    project.data.image && (
      <div class="image-wrapper">
        <img
          src={project.data.image}
          alt={project.data.image_alt || ''}
          width="400"
          height="225"
          loading="lazy"
          decoding="async"
        />
      </div>
    )
  }
  <div class="card-content">
    <div class="title-group">
      <h3>{project.data.title}</h3>
      {
        project.data.github && (
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <use href="/icons/github.svg#github" />
          </svg>
        )
      }
    </div>
    <p class="description">{project.data.description}</p>
    {displayDate && <p class="date">{displayDate}</p>}
  </div>
</a>

<style>
  .project-card {
    display: block;
    background: #121721;
    border: 1px solid #2a3445;
    border-radius: 8px;
    overflow: hidden;
    color: var(--text);
    text-decoration: none;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    border-color: var(--accent);
  }

  .image-wrapper {
    aspect-ratio: 16 / 9;
    background: #0b0c10;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-content {
    padding: 1rem;
  }

  .title-group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.5rem;
    color: var(--muted);
  }

  .project-card:hover .title-group {
    color: var(--accent);
  }

  h3 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text);
  }

  .description {
    font-size: 0.9rem;
    color: var(--muted);
    margin: 0.5rem 0 1rem 0;
    line-height: 1.5;
  }

  .date {
    font-size: 0.8rem;
    color: var(--muted);
    margin: 0;
  }
</style>
