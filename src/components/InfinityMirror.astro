---
// A recursive component for a self-referential "infinity mirror" effect.
interface Props {
  project: {
    title?: string;
    description?: string;
    github?: string;
  };
  displayDate: string | null;
  depth?: number;
}

const { project, displayDate, depth = 2 } = Astro.props;
---

<div class="infinity-mirror">
  <header class="mirror-header">
    <span class="mirror-dot" style="background: #ff5f56;"></span>
    <span class="mirror-dot" style="background: #ffbd2e;"></span>
    <span class="mirror-dot" style="background: #27c93f;"></span>
  </header>

  <div class="mirror-content">
    <div class="title-group">
      <h4>Project: {project.title}</h4>
      {
        project.github && (
          <a
            href={project.github}
            target="_blank"
            rel="noopener noreferrer"
            class="github-link"
            aria-label="GitHub Repository"
          >
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <use href="/icons/github.svg#github" />
            </svg>
          </a>
        )
      }
    </div>
    {
      (
        <>
          <p class="mirror-description">{project.description}</p>
          <p class="mirror-date">{displayDate}</p>
        </>
      )
    }

    {
      depth > 0 && (
        <div class="nested-mirror-wrapper">
          <Astro.self
            project={project}
            displayDate={displayDate}
            depth={depth - 1}
          />
        </div>
      )
    }
  </div>
</div>

<style>
  .infinity-mirror {
    background: #0b0c10;
    border: 1px solid #2a3445;
    border-radius: 8px;
    overflow: hidden;
    width: 100%;
    max-width: 600px;
  }
  .mirror-header {
    padding: 0.75rem;
    background: #1e232b;
    display: flex;
    gap: 0.5rem;
    border-bottom: 1px solid #2a3445;
  }
  .mirror-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    display: block;
  }

  .mirror-content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .title-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin: 0;
  }
  .mirror-content h4 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--text);
  }
  .github-link {
    color: var(--muted);
    transition: color 0.2s ease;
  }
  .github-link:hover {
    color: var(--accent);
  }
  .github-link svg {
    display: block;
  }
  .mirror-description,
  .mirror-date {
    font-size: 0.7rem;
    color: var(--muted);
    margin: 0;
  }

  .nested-mirror-wrapper {
    transform: scale(0.8);
    transform-origin: center;
  }
</style>
