---
import Base from '../layouts/BaseLayout.astro';
---

<Base
  title="Page Not Found"
  description="The page you're looking for does not exist."
>
  <div class="error-container">
    <div class="error-content">
      <h1 class="error-code">404</h1>
      <h2 class="error-title">Page Not Found</h2>
      <p class="error-description">
        Sorry, the page you're looking for does not exist. It might have been
        moved or deleted, or perhaps you entered the wrong URL.
      </p>
    </div>
  </div>
</Base>

<style>
  .error-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    padding: 2rem;
  }

  .error-content {
    text-align: center;
    max-width: 600px;
    padding: 3rem 2rem;
    border-radius: 18px;
    background: linear-gradient(180deg, #111317, #0d0f13);
    border: 1px solid #1e232b;
  }

  .error-code {
    font-size: clamp(4rem, 8vw, 8rem);
    font-weight: bold;
    margin: 0 0 1rem 0;
    color: var(--accent);
    line-height: 1;
  }

  .error-title {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    margin: 0 0 1rem 0;
    color: var(--text);
  }

  .error-description {
    color: var(--muted);
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    line-height: 1.6;
    margin: 0;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .error-container {
      min-height: 50vh;
      padding: 1rem;
    }

    .error-content {
      padding: 2rem 1.5rem;
    }
  }
</style>
