---
import { getCollection, type CollectionEntry } from 'astro:content';
import Base from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

type Props = { project: CollectionEntry<'projects'> };

const { project } = Astro.props;
const { Content } = await project.render();

// Get related blog posts that contain the project's blog_tag
const allBlogPosts = await getCollection('blog');
const relatedPosts = allBlogPosts
  .filter((post) => post.data.tags.includes(project.data.blog_tag))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const displayDate = project.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  timeZone: 'UTC',
});
---

<Base title={`${project.data.title}`}>
  <article class="project-page">
    <header class="project-header">
      <div class="title-group">
        <h1>Project: {project.data.title}</h1>
        <a
          href={project.data.github}
          target="_blank"
          rel="noopener noreferrer"
          class="github-link"
          aria-label="GitHub Repository"
        >
          <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
            <use href="/icons/github.svg#github"></use>
          </svg>
        </a>
      </div>
      <p class="project-description">{project.data.description}</p>
      <p class="project-date">
        <time datetime={project.data.date.toISOString()}>
          {displayDate}
        </time>
      </p>
    </header>
    <div class="project-image">
      <Image
        src={project.data.image as ImageMetadata}
        alt={project.data.image_alt}
        width={800}
        height={450}
        fit="contain"
      />
    </div>
    <div class="project-content">
      <Content />
    </div>

    {
      relatedPosts.length > 0 && (
        <>
          <hr class="divider" />
          <section class="related-posts">
            <h2>Related Blog Posts</h2>
            <ul class="post-list">
              {relatedPosts.map((post) => (
                <li class="post-item">
                  <a href={`/blog/${post.slug}`} class="post-link">
                    <h3 class="post-title">{post.data.title}</h3>
                    <p class="post-subtitle">{post.data.subtitle}</p>
                  </a>
                </li>
              ))}
            </ul>
          </section>
        </>
      )
    }
  </article>
</Base>

<style>
  .project-page {
    max-width: 900px;
    margin-inline: auto;
  }

  .project-header {
    margin-top: 3rem;
    margin-bottom: 2rem;
  }

  .title-group {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .title-group h1 {
    margin: 0;
  }

  .github-link {
    color: var(--muted);
    transition: color 0.2s ease;
  }

  .github-link:hover {
    color: var(--accent);
  }

  .github-link svg {
    display: block;
  }

  .project-description {
    font-size: 1.2rem;
    color: var(--muted);
    margin: 1rem 0;
  }

  .project-date {
    font-size: 0.9rem;
    color: var(--muted);
    margin-top: 1rem;
  }

  .project-image {
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
  }

  .project-image img {
    max-width: 100%;
    max-height: 450px;
    width: auto;
    height: auto;
    border-radius: 8px;
    border: 1px solid #1e232b;
  }

  .divider {
    border: none;
    border-top: 1px solid #2a3445;
    margin: 3rem 0;
  }

  .related-posts h2 {
    margin-bottom: 1.5rem;
  }

  .post-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .post-item {
    margin-bottom: 1rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .post-item::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
    font-size: 1.2rem;
  }

  .post-link {
    color: inherit;
    text-decoration: none;
  }

  .post-link:hover {
    text-decoration: underline;
  }

  .post-title {
    margin: 0 0 0.25rem 0;
    font-size: 1.1rem;
  }

  .post-subtitle {
    margin: 0;
    color: var(--muted);
    font-size: 0.95rem;
  }
</style>
